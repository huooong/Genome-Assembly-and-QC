###################################
#!/bin/bash

# Directories
INPUT_DIR="Data"
OUTPUT_DIR="Results"
RACON_DIR="$OUTPUT_DIR/Racon"
MEDAKA_DIR="$OUTPUT_DIR/Medaka"

# Load conda commands
CONDA_BASE=$(dirname $(dirname $(which conda)))
source "$CONDA_BASE/etc/profile.d/conda.sh"

###################################

# Run CheckM2
echo "---------------------------------------------------"
echo "Assessing completeness and contamination"
echo "---------------------------------------------------"

## Load CheckM2 environment
conda activate checkm2_env

## Directory for CheckM2 
CHECKM2_DIR="$OUTPUT_DIR/CheckM2"
mkdir -p "$CHECKM2_DIR"

## CheckM2 database path
CHECKM2_DB="Database"
export CHECKM2DB="$CHECKM2_DB"

## CheckM2 parameters
THREADS=8
POLISHED_DIR="$MEDAKA_DIR" #change if needed
echo "Running CheckM2 on polished assemblies in $POLISHED_DIR"

## Run CheckM2
for fasta_file in "$POLISHED_DIR"/*/*.fasta;  do
    sample=$(basename "$(dirname "$fasta_file")")
    sample_dir="$CHECKM2_DIR/$sample"
    mkdir -p "$sample_dir"

    echo "Running CheckM2 on sample: $sample"
    checkm2 predict \
        --threads $THREADS \
        --input "$fasta_file" \
        --output-directory "$sample_dir"

    echo "Results saved in $sample_dir"
    echo "----------------------------"
done

conda deactivate

